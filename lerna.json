{
  "version": "0.2.4",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "sort": [
    "@nuz/shared",
    "@nuz/utils",
    "@nuz/core",
    "@nuz/cli",
    "@nuz/registry"
  ],
  "command": {
    "version": {
      "allowBranch": ["master"],
      "message": "chore(release): %s",
      "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"]
    }
  }
}
